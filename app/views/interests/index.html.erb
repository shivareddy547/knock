<%- model_class = Interest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <!--<th><%#= model_class.human_attribute_name(:id) %></th>-->
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:cover_image) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%#= interest.name %>
          <%= link_to interest.name, interest_path(interest) %>
        </td>
        <td><%= interest.description %></td>
        <!--<td><%= link_to interest.id, interest_path(interest) %></td>-->
        <td><%#= interest.image %>
          <%= image_tag(interest.image.small.url) if interest.image.url %>
        </td>
        <td>
          <%#= interest.cover_image %>
          <%= image_tag(interest.cover_image.small.url) if interest.cover_image.url %>
        </td>

        <td><%=l interest.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_interest_path(interest), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      interest_path(interest),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_interest_path,
            :class => 'btn btn-primary' %>
