<%- model_class = Interest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%#= @interest.image %>
    <%= image_tag(@interest.image.medium.url) if @interest.image.url %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:cover_image) %>:</strong></dt>
  <dd><%#= @interest.cover_image %>
    <%= image_tag(@interest.cover_image.medium.url) if @interest.image.url %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @interest.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @interest.description %></dd>
</dl>
<% if @interest.user.id == current_user.id %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              interests_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_interest_path(@interest), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              interest_path(@interest),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<% end %>